{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)",
    ":enableVulnerabilityAlerts",
    ":separateMajorReleases",
    ":followTag(typescript, next)",
    "group:definitelyTyped",
    "group:monorepos",
    "group:test"
  ],
  "rangeStrategy": "pin",
  "labels": ["deps"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["patch"],
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies", "devDependencies", "peerDependencies"],
      "groupName": "npm patch dependencies",
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor"],
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies", "devDependencies", "peerDependencies"],
      "groupName": "npm minor dependencies"
    },
    {
      "matchManagers": ["npm"],
      "groupName": "linter deps",
      "extends": ["packages:linters"],
      "matchPackagePatterns": ["^@biomejs", "^eslint", "^prettier"],
      "automerge": true,
      "major": {
        "automerge": false
      }
    }
  ],
  "ignoreDeps": []
}
