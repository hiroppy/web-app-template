{
  "name": "web-app-template",
  "version": "0.0.1",
  "description": "",
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "setup": "corepack enable pnpm",
    "dev": "pnpm db:up && pnpm db:migrate && pnpm generate:client && next dev",
    "start": "next start",
    "build": "pnpm generate:client && next build",
    "build:test": "node ./tests/build.mjs",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest watch",
    "test:e2e": "NODE_ENV=test playwright test",
    "test:e2e:ui": "pnpm test:e2e --ui",
    "db:up": "docker compose up -d && sleep 0.5",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset -f",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "generate:client": "prisma generate && prettier -w ./prisma/schema/ERD.md",
    "lint": "biome lint --write . && knip",
    "fmt": "prettier -w './**/*.{md,yml}' && biome format --write . && prisma format"
  },
  "dependencies": {
    "@auth/prisma-adapter": "2.9.0",
    "@hookform/resolvers": "5.0.1",
    "@next/env": "15.3.1",
    "@opentelemetry/exporter-metrics-otlp-grpc": "0.200.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "0.200.0",
    "@opentelemetry/instrumentation-http": "0.200.0",
    "@opentelemetry/resources": "2.0.0",
    "@opentelemetry/sdk-metrics": "2.0.0",
    "@opentelemetry/sdk-node": "0.200.0",
    "@opentelemetry/sdk-trace-base": "2.0.0",
    "@opentelemetry/semantic-conventions": "1.32.0",
    "@prisma/client": "6.7.0",
    "@prisma/instrumentation": "6.7.0",
    "clsx": "2.1.1",
    "next": "15.3.1",
    "next-auth": "5.0.0-beta.27",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.56.1",
    "stripe": "18.0.0",
    "prisma": "6.7.0",
    "zod": "3.24.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.10.1",
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "1.52.0",
    "@tailwindcss/postcss": "4.1.5",
    "@testing-library/react": "16.3.0",
    "@types/node": "22.15.3",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.3",
    "@vitejs/plugin-react": "4.4.1",
    "jsdom": "26.1.0",
    "knip": "5.51.1",
    "lefthook": "1.11.12",
    "prettier": "3.5.3",
    "prisma-erd-generator": "2.0.4",
    "tailwindcss": "4.1.5",
    "testcontainers": "10.24.2",
    "typescript": "5.8.3",
    "vitest": "3.1.2"
  }
}
