{
  "name": "web-app-template",
  "version": "0.0.1",
  "description": "",
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "setup": "corepack enable pnpm",
    "dev": "pnpm db:up && pnpm db:migrate && pnpm generate:client && next dev",
    "dev:stripe": "stripe listen --forward-to localhost:3000/api/payment/webhook",
    "start": "next start",
    "build": "pnpm generate:client && next build",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest watch",
    "test:e2e": "NODE_ENV=test playwright test",
    "test:e2e:ui": "pnpm test:e2e --ui",
    "db:up": "docker compose up -d --wait",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset -f",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "generate:client": "prisma generate",
    "lint": "biome lint --write . && knip",
    "fmt": "prettier -w './**/*.{md,yml}' && biome format --write . && prisma format"
  },
  "dependencies": {
    "@auth/prisma-adapter": "2.11.1",
    "@hookform/resolvers": "5.2.2",
    "@next/env": "16.1.5",
    "@opentelemetry/exporter-metrics-otlp-grpc": "0.211.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "0.211.0",
    "@opentelemetry/instrumentation-http": "0.211.0",
    "@opentelemetry/resources": "2.5.0",
    "@opentelemetry/sdk-metrics": "2.5.0",
    "@opentelemetry/sdk-node": "0.211.0",
    "@opentelemetry/sdk-trace-base": "2.5.0",
    "@opentelemetry/semantic-conventions": "1.39.0",
    "@prisma/client": "6.19.2",
    "@prisma/instrumentation": "6.19.2",
    "clsx": "2.1.1",
    "next": "16.1.5",
    "next-auth": "5.0.0-beta.30",
    "prisma": "6.19.2",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-hook-form": "7.71.1",
    "stripe": "20.2.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@biomejs/biome": "2.3.15",
    "@playwright/test": "1.57.0",
    "@tailwindcss/postcss": "4.1.18",
    "@testing-library/react": "16.3.2",
    "@types/node": "24.10.11",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "jsdom": "27.4.0",
    "knip": "5.82.1",
    "lefthook": "2.0.15",
    "prettier": "3.8.1",
    "tailwindcss": "4.1.18",
    "testcontainers": "11.11.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
