{
  "name": "web-app-template",
  "version": "0.0.0",
  "description": "",
  "packageManager": "pnpm@8.15.3",
  "scripts": {
    "setup": "git config --local core.hooksPath .githooks && corepack enable pnpm",
    "dev": "pnpm dev:db:setup && next dev",
    "dev:db:setup": "pnpm db:start && pnpm dev:db:migrate",
    "dev:db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "dev:db:reset": "dotenv -e .env.local -- pnpm db:reset",
    "dev:db:studio": "dotenv -e .env.local -- prisma studio",
    "test": "dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest watch",
    "test:db:setup": "pnpm db:start && dotenv -e .env.test -- pnpm db:deploy && pnpm generate:client",
    "test:db:reset": "dotenv -e .env.test -- pnpm db:reset",
    "test:e2e": "dotenv -e .env.test -- playwright test",
    "db:start": "docker-compose up -d && pnpm wait",
    "db:stop": "docker-compose stop",
    "db:reset": "prisma migrate reset -f",
    "db:deploy": "prisma migrate deploy",
    "generate:client": "prisma generate",
    "wait": "sleep 0.5",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && biome lint .",
    "fmt": "biome format --write .",
    "check": "biome check --apply ."
  },
  "dependencies": {
    "@hookform/resolvers": "3.3.4",
    "@next-auth/prisma-adapter": "1.0.7",
    "@prisma/client": "5.9.1",
    "next": "14.1.0",
    "next-auth": "4.24.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.50.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@playwright/test": "1.41.2",
    "@testing-library/react": "14.2.1",
    "@types/node": "20.11.19",
    "@types/react": "18.2.55",
    "@types/react-dom": "18.2.19",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "10.4.17",
    "dotenv-cli": "7.3.0",
    "eslint": "8.56.0",
    "eslint-config-next": "14.1.0",
    "jsdom": "24.0.0",
    "lint-staged": "15.2.2",
    "postcss": "8.4.35",
    "prettier": "3.2.5",
    "prisma": "5.9.1",
    "prisma-erd-generator": "1.11.2",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3",
    "vitest": "1.2.2"
  }
}
